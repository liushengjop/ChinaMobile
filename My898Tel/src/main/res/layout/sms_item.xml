<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/h_75"
    android:gravity="center_vertical"
    android:background="@drawable/whiteandblue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_75"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_type"
            android:layout_marginLeft="@dimen/w_24"
            android:layout_marginTop="@dimen/h_14"
            android:layout_marginBottom="@dimen/h_14"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/search_contact"
                android:gravity="center"
                android:textColor="@color/color697a7c"
                android:textSize="@dimen/size_18" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/search_contact"
                android:textColor="@color/color999999"
                android:textSize="@dimen/size_11.5" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_date"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="011"
            android:textColor="@drawable/color_setting"
            android:textSize="@dimen/size_13" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/w_24"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textColor="@drawable/color99999"
            android:textSize="@dimen/size_13" />
    </RelativeLayout>
    
        <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
            android:layout_marginLeft="@dimen/w_24"
        android:background="@drawable/line"/>

</LinearLayout>